<?xml version="1.0"?>
<Window name="ingame_save_window" title="Save game" min_size="0,300"  base_color="40, 40, 40">
		<ListBox name="savegamelist" min_size="160,0" base_color="40, 40, 40"/>
		<Spacer />
		<HBox>
			<Label name="enter_filename_label" text="Enter filename:" base_color="40, 40, 40"/>
			<TextField name="savegamefile" min_size="200,16" base_color="40, 40, 40"/>
		</HBox>
		<HBox>
			<Button name="deleteButton" text="Delete" base_color="40, 40, 40"/>
			<Spacer />
			<Button name="cancelButton" text="Cancel" base_color="40, 40, 40"/>
			<Button name="okButton" text="Ok" base_color="40, 40, 40"/>
		</HBox>
</Window>
