<?xml version="1.0"?>
<Container name="change_name_dialog_window" size="800,580" position="100,100">
	<VBox>
		<HBox>
			<Label text="Change name to: "/>
			<TextField name="new_name" min_size="200,16"/>
		</HBox>
		<HBox>
			<ImageButton name="cancelButton" up_image="content/gui/images/background/close.png" hover_image="content/gui/images/background/close_h.png" down_image="content/gui/images/background/close.png" />
			<ImageButton name="okButton" up_image="content/gui/images/background/ok.png" hover_image="content/gui/images/background/ok_h.png" down_image="content/gui/images/background/ok.png" />
		</HBox>
	</VBox>
</Container>
