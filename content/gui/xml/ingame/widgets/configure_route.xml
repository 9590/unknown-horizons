<?xml version="1.0"?>
<Container name="configure_route" size="1020,580" position="-20,0">
	<Icon image="content/gui/images/background/book.png" position="100,0" />

	<!-- left side -->

	<VBox name="left_vbox" max_size="350,508" min_size="350,508" position="175,40" padding="5">
		<Icon image="content/gui/images/background/hr.png" />
	</VBox>
	<ToggleImageButton name="start_route" border_size="0" position="175,480"
		inactive_image="content/gui/icons/ship/traderoute_disabled.png"
		up_image="content/gui/icons/ship/traderoute.png"
		down_image="content/gui/icons/ship/traderoute.png"
		hover_image="content/gui/icons/ship/traderoute_hover_to_disable.png"
		tooltip="Start route" comment="Trade route" is_focusable="0"/>
	<VBox position="250,485">
		<HBox>
			<Label name="lbl_wait_at_load" text="Wait at load:"
				comment="Trade route setting: Whether to wait until all goods could be loaded." />
			<CheckBox name="wait_at_load" min_size="15,15" is_focusable="0"/>
		</HBox>
		<HBox>
			<Label name="lbl_wait_at_unload"  text="Wait at unload:"
				comment="Trade route setting: Whether to wait until all goods could be unloaded." />
			<CheckBox name="wait_at_unload" min_size="15,15" is_focusable="0"/>
		</HBox>
	</VBox>



	<!-- right side -->

	<VBox name="right_vbox" max_size="350,508" min_size="350,508" position="520,40" padding="2">
		<Label name="select_res_label" text=""/>

		<!-- exactly one of the following two is enabled at any given time -->
		<TooltipIcon name="minimap" size="300,300" max_size="300,300" is_focusable="0"/> <!-- settlement selection in minimap -->
		<VBox name="resources" size="100,200" /> <!-- res selection -->

		<HBox> <Spacer min_size="275" max_size="275"/>
			<CancelButton tooltip="Exit"  is_focusable="0"/>
		</HBox>
	</VBox>
<!-- Here pickbelts could be added to achieve more space.
Refer to gui/credits/*.xml for sample implementation. -->
</Container>
