<?xml version="1.0"?>
<!--
Tab to be shown at the main square.
It shows an overview over the inhabitants like average happiness and most needed
resources.
-->
<Container size="250,600">
<TabBG name="background" amount="7"/>

	<Container position="0,70" size="600,600" >

		<HBox position="22,7"  min_size="170,20"  size="230,20" >
		<Spacer min_size="0"  max_size="50" />
			<Label name="headline" text="Settler overview" />
		</HBox>

		<Icon image="content/gui/images/background/hr.png" position="20,30" />

		<Container size="260,60" position="25,43">
			<!-- Taxes -->
			<!-- TODO include icon, label, paid taxes in box to adjust with length
				of translated strings (can vary a lot between en and nl) -->
			<Icon name="paid_taxes_icon" position="0,0"
			      image="content/gui/icons/resources/running_costs.png"
			      helptext="Paid taxes" />
			<Label position="20,0" name="tax_label" text="Taxes:" />
			<Label name="taxes" position="98,0" text=""
			       helptext="Paid taxes" />
			<Icon name="tax_rate_icon" position="160,0"
			      image="content/gui/icons/resources/running_costs.png"
			      helptext="Tax rate" />
			<Label name="tax_val_label" position="180,0" text=""
			       helptext="Tax rate" />
			<StepSlider position="2,25" size="200,20" name="tax_slider" orientation="0" is_focusable="0" />
		</Container>

		<Container size="260,20" position="25,90">
            <Icon name="avg_happiness_icon" position="2,2" image="content/gui/icons/templates/happiness/average.png"
                  helptext="Happiness" />
            <Icon position="22,0" image="content/gui/images/background/bar_bg.png" size="80,20" />
            <ProgressBar name='avg_happiness' position="23,1" size="78,18" helptext="Average Happiness" />
		</Container>

		<Container size="260,80" position="25,120">
			<Label name="upgrades_lbl" position="0,0" text="Upgrade permissions:" />
			<ToggleImageButton name="allow_upgrades" border_size="0" position="0,20"
			                   inactive_image="content/gui/images/buttons/upgrade/disallow.png"
			                   up_image="content/gui/images/buttons/upgrade/allow.png"
			                   down_image="content/gui/images/buttons/upgrade/allow.png"
			                   hover_image="content/gui/images/buttons/upgrade/hover_to_disallow.png" />
		</Container>

		<Icon image="content/gui/images/background/hr.png" position="20,200" />

		<Container name="residents_per_house_container" size="260,60" position="25,205">
			<Label name="headline_residents_per_house" position="0,0" text="Residents per house" />
            <Icon position="0,21" image="content/gui/icons/widgets/cityinfo/house_small.png"
                  helptext="Happiness" />
            <Icon position="0,41" image="content/gui/icons/widgets/cityinfo/inhabitants_small.png"
                  helptext="Happiness" />
            <Container name="residents_per_house_table" position="10,20" size="240,40" />
		</Container>

		<Container name="residents_total" size="260,60" position="25,270">
			<Label name="headline_residents_total" position="0,0" text="Summary" />
			<Label name="houses" position="10,20" text="houses"/>
			<Label position="160,20" name="house_count"/>
			<Label name="residents" position="10,40" text="residents"/>
			<Label position="160,40" name="resident_count"/>
		</Container>
	</Container>
</Container>
