<!--

This file shares code of loadmap.xml (playername, maplist,..)
We should probably keep it synchronised, for consistency.

-->
<Container size="1024,768" >
	<Icon image="content/gui/images/background/menu_bg.png" position="0,0" />
	<HBox position="100,100" min_size="0,400">
		<VBox>
			<Label text="Player:" base_color="40, 40, 40"/>
			<Label text="Color:" base_color="40, 40, 40"/>
		</VBox>
		<VBox>
			<TextBox name="playername" text="unknown player" size="150,16" base_color="40, 40, 40"/>
			<DropDown name="playercolor" min_size="120,0" base_color="40, 40, 40"/>
		</VBox>
	</HBox>

	<HBox position="400,40" min_size="0,150">
		<Label text="Slots:" base_color="40, 40, 40"/>
		<DropDown name="server_slots" min_size="120,0" base_color="40, 40, 40"/>
	</HBox>
	<HBox position="650,40" min_size="0,150">
		<Label text="Bots:" base_color="40, 40, 40"/>
		<DropDown name="bots" min_size="120,0" base_color="40, 40, 40"/>
	</HBox>

	<ScrollArea name="maparea" size="350,500"  horizontal_scrollbar="0" position="500,150">
		<ListBox name="maplist" min_size="100,600" />
	</ScrollArea>

	<ScrollArea name="playerarea" size="350,200"  horizontal_scrollbar="0" position="80,320">
		<ListBox name="playerlist" min_size="100,200" />
	</ScrollArea>

	<ImageButton up_image="content/gui/images/icons/oa_startmenu_door_gray.png" down_image="content/gui/images/icons/oa_startmenu_door.png" hover_image="content/gui/images/icons/oa_startmenu_door.png" name="cancel" position="500,700" />
	<ImageButton up_image="content/gui/images/icons/oa_startmenu_compass_gray.png" down_image="content/gui/images/icons/oa_startmenu_compass.png" hover_image="content/gui/images/icons/oa_startmenu_compass.png" name="startMulti" position="900,700" />

</Container>