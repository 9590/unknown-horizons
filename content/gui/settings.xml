<?xml version="1.0"?>
<Window title="Settings" base_color="40, 40, 40">
	<Label text="This is the OpenAnno settings dialog. Please make sure that you know, what you do."  wrap_text="1" max_size="420,340" base_color="40, 40, 40"/>
	<HBox>
		<VBox>
			<Label text="Autosave interval" base_color="40, 40, 40"/>
			<Label text="Number of saved autosaves:" base_color="40, 40, 40"/>
			<Label text="Number of saved quicksaves:" base_color="40, 40, 40"/>
			<Label text="Screen resolution:" base_color="40, 40, 40"/>
			<Label text="Used renderer:" base_color="40, 40, 40"/>
			<Label text="Color depth:" base_color="40, 40, 40"/>
			<Label text="Volume:" base_color="40, 40, 40"/>
		</VBox>
		<VBox>
			<HBox>
				<DropDown min_size="120,0" name="autosaveinterval" base_color="40, 40, 40" />
				<Label text="minutes" base_color="40, 40, 40"/>
			</HBox>
			<DropDown min_size="120,0" name="savedautosaves" base_color="40, 40, 40" />
			<DropDown min_size="120,0" name="savedquicksaves" base_color="40, 40, 40" />
			<DropDown min_size="120,0" name="screen_resolution" base_color="40, 40, 40" />
			<DropDown min_size="120,0" name="screen_renderer" base_color="40, 40, 40"/>
			<DropDown min_size="120,0" name="screen_bpp" base_color="40, 40, 40"/>
			<HBox>
				<Slider size="120,20" name="volume" orientation="0" scale_start="0.0" scale_end="1.0" base_color="40, 40, 40" />
				<TextBox name="volume_value" text="" base_color="40,40,40"/>
			</HBox>
		</VBox>
	</HBox>
	<CheckBox size="32,32" name="screen_fullscreen" text="Use the full screen mode" base_color="40, 40, 40"/>
	<CheckBox size="32,32" name="sound_enable_opt" text="Enable sound" base_color="40, 40, 40"/>
	<HBox>
		<Spacer />
		<Button name="cancelButton" text="Cancel" base_color="40, 40, 40"/>
		<Button name="okButton" text="Ok" base_color="40, 40, 40"/>
	</HBox>
</Window>
