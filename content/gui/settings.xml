<?xml version="1.0"?>
<Window name="settings_window" title="Settings" base_color="40, 40, 40">
	<Label text="This is the Unknown Horizons settings dialog. Please make sure that you know, what you do." name="settings_dialog_title" wrap_text="1" max_size="420,340" base_color="40, 40, 40"/>
	<HBox>
		<VBox>
            <Label name="language_label" text="Language:" base_color="40, 40, 40"/>
			<Label name="autosave_interval_label" text="Autosave interval" base_color="40, 40, 40"/>
			<Label name="number_of_autosaves_label" text="Number of saved autosaves:" base_color="40, 40, 40"/>
			<Label name="number_of_quicksaves_label" text="Number of saved quicksaves:" base_color="40, 40, 40"/>
			<Label name="screen_resolution_label" text="Screen resolution:" base_color="40, 40, 40"/>
			<Label name="use_renderer_label" text="Used renderer:" base_color="40, 40, 40"/>
			<Label name="color_depth_label" text="Color depth:" base_color="40, 40, 40"/>
			<Label name="music_volume_label" text="Music volume:" base_color="40, 40, 40"/>
			<Label name="effect_volume_label" text="Effects volume:" base_color="40, 40, 40"/>                        
		</VBox>
		<VBox>
                        <DropDown min_size="120,0" name="language" base_color="40, 40, 40"/>
			<HBox>
				<DropDown min_size="120,0" name="autosaveinterval" base_color="40, 40, 40" />
				<Label text="minutes" name="minutes_label" base_color="40, 40, 40"/>
			</HBox>
			<DropDown min_size="120,0" name="savedautosaves" base_color="40, 40, 40" />
			<DropDown min_size="120,0" name="savedquicksaves" base_color="40, 40, 40" />
			<DropDown min_size="120,0" name="screen_resolution" base_color="40, 40, 40" />
			<DropDown min_size="120,0" name="screen_renderer" base_color="40, 40, 40"/>
			<DropDown min_size="120,0" name="screen_bpp" base_color="40, 40, 40"/>
			<HBox>
				<Slider size="120,20" name="volume_music" orientation="0" scale_start="0.0" scale_end="0.20" base_color="40, 40, 40" />
				<TextBox name="volume_music_value" text="" base_color="40,40,40"/>
			</HBox>
			<HBox>
				<Slider size="120,20" name="volume_effects" orientation="0" scale_start="0.0" scale_end="0.5" base_color="40, 40, 40" />
				<TextBox name="volume_effects_value" text="" base_color="40,40,40"/>
			</HBox>
		</VBox>
	</HBox>
	<CheckBox size="32,32" name="screen_fullscreen" text="Use the full screen mode" base_color="40, 40, 40"/>
	<CheckBox size="32,32" name="sound_enable_opt" text="Enable sound" base_color="40, 40, 40"/>
	<HBox>
		<Spacer />
		<Button name="cancelButton" text="Cancel" base_color="40, 40, 40"/>
		<Button name="okButton" text="Ok" base_color="40, 40, 40"/>
	</HBox>
</Window>
