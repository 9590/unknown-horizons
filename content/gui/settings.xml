<?xml version="1.0"?>
<!--     #TODO :: at the moment gui.py overwrites style definitions like font=""     -->
<Container name="settings_window" size="800,580" position="100,100">
<Icon image="content/gui/images/background/book.png" position="0,0" />

<Container size="320,520" position="65,32">
	<Label text="Settings" position="150,10" name="headline" />
	<Label name="warning" position="22,30"
		text="Please make sure that you know what you do."
		wrap_text="0" max_size="300,20" min_size="300,20" />
	<Icon image="content/gui/images/background/hr.png" position="55,50" />

	<Container size="320,245" position="0,50" name="graphic_settings" >
		<Label name="headline_graphics" text="Graphics" position="12,15"
			font="libertine_headline" />
		<Label name="screen_resolution_label" text="Screen resolution:"
			position="22,50" wrap_text="1" max_size="180,40" />
		<ScrollArea min_size="100,105" position="22,90">
			<ListBox name="screen_resolution" />
		</ScrollArea>

		<Label name="color_depth_label" text="Color depth:" position="180,50"
			wrap_text="1" max_size="140,20" />
		<ScrollArea min_size="55,20" position="200,90">
			<ListBox name="screen_bpp" />
		</ScrollArea>
		<Label name="use_renderer_label" text="Used renderer:" position="180,120"
			wrap_text="1" max_size="140,40" />
		<ScrollArea min_size="55,40" position="200,160">
			<ListBox name="render_backend" />
		</ScrollArea>
		<CheckBox min_size="160,32" name="enable_fullscreen" position="22,210" />
		<Label name="screen_fullscreen_text" text="Full screen" position="67,215" />
	</Container>

	<Container size="320,200" position="0,320" name="sound_settings">
		<Label name="headline_sound" text="Sound" position="12,0" font="libertine_headline" />
		<Label name="music_volume_label" text="Music volume:" position="22,35"
			wrap_text="1" max_size="160,40" />
		<Container size="180,30" position="170,45">
			<Slider size="120,20" name="volume_music"
				orientation="0" scale_start="0.0" scale_end="0.20" />
			<TextBox min_size="40,0" name="volume_music_value" text="" position="124,0" />
		</Container>
		<Label name="effect_volume_label" text="Effects volume:" position="22,90"
			wrap_text="1" max_size="160,40" />
		<Container size="180,30" position="170,95">
			<Slider size="120,20" name="volume_effects"
				orientation="0" scale_start="0.0" scale_end="0.5" />
			<TextBox min_size="40,0" name="volume_effects_value" text=""  position="124,0" />
		</Container>
		<CheckBox min_size="160,32" name="enable_sound" position="22,140" />
		<Label name="sound_enable_opt_text" text="Enable sound" position="67,145" />
	</Container>
</Container>

<Container size="320,520" position="420,32">
	<Label name="headline_saving" text="Saving" position="12,60" font="libertine_headline" />
	<Container size="320,240" position="22,100" name="saving_settings">		
		<VBox size="110,80" position="0,0">
			<HBox>
				<Label name="autosave_interval_label" text="Autosave interval:"
				wrap_text="1" max_size="250,40" min_size="250,20" />
				<Label text="" name="" />
			</HBox>
			<Slider size="120,20" name="autosaveinterval"
				orientation="0" scale_start="0.0" scale_end="60.0" step_length="2.0" />
		</VBox>
		<VBox size="110,80" position="0,50">
			<HBox>
				<Label name="number_of_autosaves_label" text="Number of autosaves:" 
				wrap_text="1" max_size="250,40" min_size="250,20" />
				<Label text="" name="" />
			</HBox>
			<Slider size="120,20" name="autosavemaxcount"
				orientation="0" scale_start="1.0" scale_end="30.0" step_length="1.0" />
			<!--Label name="number_of_autosaves_label_ex" text="Anzahl der automatisch gespeicherten:" 
				wrap_text="1" max_size="250,40" min_size="250,20" /-->
		</VBox>
		<VBox size="110,80" position="0,100">
			<HBox>
				<Label name="number_of_quicksaves_label" text="Number of quicksaves:"
				wrap_text="1" max_size="250,40" min_size="250,20" />
				<Label text="" name="" />
			</HBox>
			<Slider size="120,20" name="quicksavemaxcount"
				orientation="0" scale_start="1.0" scale_end="30.0" step_length="1.0" />
		</VBox>
	</Container>

	<Container size="320,180" position="12,260">
		<Label name="headline_language" text="Language" font="libertine_headline" />
		<Label name="language_label" text="Select language:" position="10,40" />
		<ScrollArea min_size="125,140" position="140,40">
			<ListBox name="language" />
		</ScrollArea>
	</Container>

	<Container size="320,40" position="140,460">
		<ImageButton name="cancelButton"
			up_image="content/gui/images/background/close.png"
			hover_image="content/gui/images/background/close_h.png"
			down_image="content/gui/images/background/close.png" />
		<ImageButton name="okButton" position="60,0"
			up_image="content/gui/images/background/ok.png"
			hover_image="content/gui/images/background/ok_h.png"
			down_image="content/gui/images/background/ok.png" />
		<ImageButton name="defaultButton" position="120,0"
			up_image="content/gui/images/background/delete.png"
			hover_image="content/gui/images/background/delete_h.png"
			down_image="content/gui/images/background/delete.png" />
	</Container>
</Container>
</Container><!--     #TODO :: get rid of this container mass     -->
