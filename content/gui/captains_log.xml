<?xml version="1.0"?>
<Container name="settings_window" size="800,580" position="0,0">
	<Icon image="content/gui/images/background/book.png" position="0,0" />

	<!-- left side -->
	<Container size="350,580" position="75,40">
		<!--Label name="lbl_log" max_size="320, 25" 
			wrap_text="0" text="Captain's Log" font="libertine_18_black" /-->
		<Label name="head_left" max_size="320,25" 
			wrap_text="0" font="libertine_18_black" />
		<Label name="lbl_left" position="0,35" max_size="320,580" 
			wrap_text="1" font="libertine_14_black" />

		<TooltipButton name="backwardButton" position="0,470" 
			up_image="content/gui/images/background/parrow_left.png" 
			hover_image="content/gui/images/background/parrow_left_h.png" 
			down_image="content/gui/images/background/parrow_left_d.png" 
			tooltip="Read previous entries" />
		<TooltipButton name="forwardButton" position="35,470" 
			up_image="content/gui/images/background/parrow_right.png" 
			hover_image="content/gui/images/background/parrow_right_h.png" 
			down_image="content/gui/images/background/parrow_right_d.png" 
			tooltip="Read next entries" /> <!-- "proximate entries" would also fit -->
	</Container>

	<!-- right side -->
	<Container size="350,580" position="425,40">
		<Label name="head_right" max_size="320,25" 
			wrap_text="0" font="libertine_18_black" />
		<Label name="lbl_right" position="0,35" max_size="320,580" 
			wrap_text="1" font="libertine_14_black" />

		<TooltipButton name="cancelButton" position="250,470" 
			up_image="content/gui/images/background/close.png" 
			hover_image="content/gui/images/background/close_h.png" 
			down_image="content/gui/images/background/close.png" 
			tooltip="Leave Captain's Log" />
	</Container>
</Container>
